<h3><%= @question.question %></h3>


<% if current_user != nil && current_user.has_answered_current_question?(@question, current_user) %>
  <ul id="all-answers">
    <% @answers.each do |answer| %>
      <li><%= answer.answer_content %></li>
    <% end %>
  </ul>
<% else %>
  <%= render "questions/answer_question" %>
<% end %>
